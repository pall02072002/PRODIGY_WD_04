    <title>Temperature Converter Website using html, css &amp; JavaScript</title>
    <!-- css link -->
    <link rel="stylesheet" href="./pp_files/styles.css">

    <!-- box icons -->
    <link rel="stylesheet" href="https://unpkg.com/boxicons@latest/css/boxicons.min.css">

